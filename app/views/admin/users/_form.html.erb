
 <div class="container">
<%= form_with(model: [:admin, @user], local: true, url: choose_new_or_edit) do |f| %>
  <% if @user.errors.any? %>
    <div class="bg-danger text-white">
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li>ãƒ»<%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <br>
   <div class="field">
    <p><%= f.text_field :name, placeholder: 'name', class: "log-in-tag" %></p>
    <br>
    <p><%= f.email_field :email, placeholder: 'email', class: "log-in-tag" %></p>
    <br>
    <p><%= f.password_field :password, placeholder: 'password', class: "log-in-tag" %></p>
    <br>
    <p><%= f.password_field :password_confirmation, placeholder: 'password_confirmation', class: "log-in-tag" %></p>
    <br>

      <p><%=f.label :admin%></p>
      <p><%=f.check_box :admin, {}, 'true', 'false' %></p>

    <br>
    <%= f.submit "Register" , class: "btn btn-primary"  %>
  <% end %>
  </div>
</div>
