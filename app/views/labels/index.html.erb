
<div class="display justify-content-center">
  <div class="col-10">
  <p id="notice"><%= notice %></p>

   <h4 class="text-center">Labels</h4>
 <%=link_to 'New Label', new_label_path, class:"btn btn-outline-primary btn-sm" %>
 <br>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <%@label.each do |label|%>
        <tr>
          <td><%= label.name %></td>
          <td><%= link_to 'Show', label, class:"btn btn-outline-primary btn-sm"%></td>
          <td><%= link_to 'Edit', edit_label_path(label),class:"btn btn-outline-success btn-sm" %></td>
          <td><%= link_to 'Destroy', label,class:"btn btn-outline-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>

    <br>
  </table>
<hr>
  <br>


</div>
</div>
