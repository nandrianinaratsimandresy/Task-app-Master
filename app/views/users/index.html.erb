<div class="mx-auto" style="width: 400px; mt-30">
  <div class="user-info">
      <!-- <p class="text-center">Management Panel<p> -->
      <br>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th colspan="3"></th>
            <th></th>
            <th</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%=user.name %></td>
              <td><%=user.email %></td>

              <td><%= link_to 'Show', user, class:"btn btn-outline-primary btn-sm" %></td>
              <td><%= link_to 'Edit', edit_user_path(user), class:"btn btn-outline-success btn-sm" %></td>
              <td><%= link_to 'Destroy', user,class:"btn btn-outline-danger btn-sm", method: :delete, data: {confirm: 'Are you sure?'} %></td>
              <%end%>
            </tr>
        </tbody>
      </table>
  <br>
  <%= link_to 'New User', new_user_path, class: "nav-link"  %>
  </div>
</div>
